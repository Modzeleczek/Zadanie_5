<Window x:Class="Zadanie_5.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:Zadanie_5"
  mc:Ignorable="d"
  Title="RSA"
  Width="350"
  Height="150">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Button Name="InverseModuloCalculatorButton"
      Click="InverseModuloCalculatorButtonClick"
      Content="Obliczanie odwrotności modulo n"
      Margin="0,5,0,0"
      Grid.Row="0"/>
    <Button Name="KeyPairGeneratorButton"
      Click="KeyPairGeneratorButtonClick"
      Content="Generowanie pary kluczy prywatnych i publicznych"
      Margin="0,5,0,0"
      Grid.Row="1"/>
    <Button Name="EnDecryptorButton"
      Click="EnDecryptorButtonClick"
      Content="Szyfrowanie/Deszyfrowanie"
      Margin="0,5,0,0"
      Grid.Row="2"/>
  </Grid>
</Window>
